# .env file for Smart BMS Backend
# این فایل باید در ریشه پروژه Spring Boot شما (E:\Smart-iot\Spring) قرار گیرد.

SERVER_PORT=7080

# H2 Database (In-memory - داده ها با هر بار راه اندازی مجدد از بین می روند)
DB_URL=jdbc:h2:mem:smartbmsdb
DB_USERNAME=sa
DB_PASSWORD=
DB_DRIVER=org.h2.Driver
JPA_DDL_AUTO=update
H2_CONSOLE_ENABLED=true

# CORS Configuration - آدرس فرانت اند شما (برای جلوگیری از خطاهای Cross-Origin)
# اگر لوکال تست میکنید، معمولا پورت 8080 است.
# اگر فرانت روی Vercel یا جای دیگر است، آدرس کامل آن را اینجا قرار دهید.
FRONTEND_URL=http://localhost:8080,https://vue-green-five.vercel.app